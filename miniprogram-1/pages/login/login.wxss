.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f6f6f6;
  padding: 0 32rpx;
}

.avatar-container {
  margin-bottom: 40rpx;
  text-align: center;
}

.default-avatar, .avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.login-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.login-btn::after {
  border: none;
} 